<div class="row">
  <div class="col-lg-12">
    <h1>登録者情報一覧</h1>
  </div>
  <div class="col-lg-6">
    <p>登録者情報が表示されます。</p>
  </div>
  <div class="col-lg-6">
    <%= link_to '登録', new_customer_path, class: "btn btn-default pull-right" %>
  </div>
  <table class="table table-striped">
    <thead>
      <th>姓</th>
      <th>名</th>
      <th>メールアドレス</th>
      <th>所属会社</th>
      <th>役職</th>
      <th>リンク</th>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.family_name %></td>
          <td><%= customer.given_name %></td>
          <td><%= customer.email %></td>
          <td><%= customer.company.name %></td>
          <th><%= customer.post.position_name %></th>
          <td><%= link_to '詳細', customer, class: "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 <%= paginate @customers %>
</div>
