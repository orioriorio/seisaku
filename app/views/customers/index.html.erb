<div class="row">
  <div class="col-lg-12">

    <h1><i class="fa fa-book">
</i>名刺一覧<%= image_tag 'logo.jpg', class: "navbar-brand" %></h1>
  </div>
  <div class="col-lg-6">
    <p>登録済みの名刺情報を表示します</p>
  </div>
  <div class="col-lg-6">
    <%= link_to '新規名刺情報を登録する', new_customer_path, class: "btn btn-default pull-right" %>
  </div>
  <%= search_form_for @q do |f| %>
   <div class="row">
     <div class="col-sm-3 col-xs-12">
       <div class="form-group">
         <%= f.label :family_name_cont, '姓' %>
         <%= f.search_field :family_name_cont, class: "form-control input-sm" %>
       </div>
     </div>
     <div class="col-sm-3 col-xs-12">
       <div class="form-group">
         <%= f.label :given_name_cont, '名' %>
         <%= f.search_field :given_name_cont, class: "form-control input-sm" %>
       </div>
     </div>
     <div class="col-sm-3 col-xs-12">
       <div class="form-group">
         <%= f.label :email_cont, 'メールアドレス' %>
         <%= f.search_field :email_cont, class: "form-control input-sm" %>
       </div>
     </div>
     <div class="col-sm-3 col-xs-12">
       <div class="form-group">
         <%= f.label :company_name_cont, '所属' %>
         <%= f.search_field :company_name_cont, class: "form-control input-sm" %>
       </div>
     </div>
   </div>
   <div class="row">
     <div class="col-xs-12 text-center">
       <%= f.submit "名前、会社を検索", class: "btn btn-default" %>
       <i class="fa fa-search"></i>
       <%= link_to "元に戻す", request.path, class:"btn btn-default" %>
       <i class="fa fa-reply"></i>
     </div>
   </div>
 <% end %>
 <hr />
  <table class="table table-striped">
    <thead>
      <th><%= sort_link(@q, :family_name, "姓") %></th>
      <th><%= sort_link(@q, :given_name, "名") %></th>
      <th><%= sort_link(@q, :email, "メールアドレス") %></th>
      <th><%= sort_link(@q, :company_name, "所属") %></th>
      <th><%= sort_link(@q, :post_position_name, "仕事内容") %></th>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.family_name %></td>
          <td><%= customer.given_name %></td>
          <td><%= customer.email %></td>
          <td><%= customer.company.name %></td>
          <th><%= customer.post.position_name %></th>
          <td><%= link_to '名刺を表示する', customer, class: "btn" %><i class="fa fa-address-card"></i></td>
          <td><%= link_to '登録情報の編集', customer, class: "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 <%= paginate @customers %>
</div>
