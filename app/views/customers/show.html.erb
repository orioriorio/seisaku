<div class="row">
  <div class="col-lg-12">
    <h1>名刺情報</h1>
    <dl>
      <dt>氏名</dt>
      <dd style="margin:0px 0px 30px 40px"><%= @customer.full_name %></dd>
      <dt>メールアドレス</dt>
      <dd style="margin:0px 0px 30px 40px"><%= @customer.email %></dd>
      <dt>所属</dt>
      <dd style="margin:0px 0px 30px 40px"><%= @customer.company.name %></dd>
      <dt>仕事内容</dt>
      <dd style="margin:0px 0px 30px 40px"><%= @customer.post.position_name %></dd>
    </dl>
    <%= link_to '登録情報の編集', edit_customer_path(@customer), class: "btn btn-default" %>
    <%= link_to '名刺一覧に戻る', customers_path, class: "btn btn-default" %>
  </div>
</div>
